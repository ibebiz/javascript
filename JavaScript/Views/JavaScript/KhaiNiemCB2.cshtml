
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>KhaiNiemCB2</title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
</head>
<body>
    <div ng-app="First" ng-controller="myCtrl">
        Họ: <input type="text" ng-model="Ho"/>
        Tên: <input type="text" ng-model="Ten" />
        <br />
        <p>Họ tên: {{Ho + " " + Ten}}</p>
    </div>
    <script>
        var app = angular.module('First', []);
        app.controller('myCtrl', function ($scope) {
            $scope.Ho = "Nguyễn";
            $scope.Ten = "Đạt";
        });
    </script>
</body>
</html>
