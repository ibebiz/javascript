
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AngularJSDerectives</title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
</head>
<body>
    <div ng-app="" ng-init="fname='Nguyễn Đạt'; quantity=5; price=10; names=[{name:'Janna', country:'Tokyo'}, {name:'Ezreal', country:'Thanh Đa'}]">
        <p>Xin chào <span ng-bind="fname"></span></p>
        <input type="text" ng-model="fname" />
        <p>Tên thật của bạn là: {{fname}}</p><hr />
        <p>Quantity: <input type="number" ng-model="quantity" /></p>
        <p>Price: <input type="number" ng-model="price" /></p>
        <p ng-bind="quantity*price"></p>
        <p>Kết quả của phép cộng: {{quantity + price}}</p><hr />
        <ul>
            <li ng-repeat="x in names">
                {{ x.name +" "+ x.country }}
            </li>
        </ul>
    </div>
</body>
</html>
